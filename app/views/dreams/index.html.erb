<% content_for :title do %><%= @page_title || 'Recent Dreams' %><% end -%>

<h2><%= @page_title || 'Recent Dreams' %></h2>
<%- if @dreams.blank? -%>
  <p>There are no dreams that match that criteria.</p>
<%- else -%>
  <ul class='dream-list'>
  <%- for dream in @dreams -%>
    <li>
      <%= render :partial => "dream", :object => dream %>
    </li>
  <%- end -%>
  </ul>
  <p class='results-meta'>
    <%= raw page_entries_info @dreams %>
  </p>
  <p class='results-nav'>
    <%= raw paginate @dreams, :container => nil %>
  </p>

  <% link_to({:controller => params[:controller], :action => params[:action], :format => :atom}, :title => 'Subscribe to the feed for this page.', :rel => 'alternate') do %>
    <%= image_tag 'feed.png', :alt => 'feed-icon' %>
    Subscribe to the feed for this page.
  <% end -%>

<%- end -%>
