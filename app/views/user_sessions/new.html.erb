<% content_for :title do %>Sign In<% end -%>

<h2>Sign In</h2>
 
<% form_for @user_session, :url => user_session_path do |f| %>
  <p class='label-line'><%= f.label :username %></p>
  <p class='input-line'><%= f.text_field :username, :class => 'text' %></p>
  <p class='label-line'><%= f.label :password %></p>
  <p class='input-line'><%= f.password_field :password, :class => 'password' %></p>
  <p class='check_box-line'><%= f.check_box :remember_me %><%= f.label :remember_me %></p>
  <p class='button-line'><%= f.submit "Sign In", :class => 'submit' %></p>
<% end %>

<%= render :partial => "shared/session_links" %>
