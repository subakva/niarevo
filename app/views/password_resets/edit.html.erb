<% content_for :title do %>Change My Password<% end -%>

<h2>Change My Password</h2>

<%= form_for @user, :url => password_reset_path, :method => :put do |f| %>
  <%= render_form_errors(@user.errors) %>
  <p class='label-line'><%= f.label :password %></p>
  <p class='input-line'><%= f.password_field :password %></p>
  <p class='label-line'><%= f.label :password_confirmation %></p>
  <p class='input-line'><%= f.password_field :password_confirmation %></p>
  <p class='button-line'><%= f.submit "Update my password and log me in", :class => 'submit' %></p>
<% end %>
