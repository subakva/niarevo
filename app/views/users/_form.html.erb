<p class='label-line'><%= form.label :username %></p>
<p class='input-line'><%= form.text_field :username %></p>
<p class='label-line'><%= form.label :email %></p>
<p class='input-line'><%= form.text_field :email %></p>
<p class='label-line'><%= form.label :password, form.object.new_record? ? nil : "Change password" %></p>
<p class='input-line'><%= form.password_field :password %></p>
<p class='label-line'><%= form.label :password_confirmation %></p>
<p class='input-line'><%= form.password_field :password_confirmation %></p>